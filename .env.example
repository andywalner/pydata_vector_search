# Copy to .env and adjust paths for your system
# Usage: source .env

export JAVA_HOME=/opt/homebrew/opt/openjdk@17/libexec/openjdk.jdk/Contents/Home
export SPARK_HOME=/path/to/spark-3.5.3-bin-hadoop3

# JARs are relative to this repo
REPO_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
HUDI_JAR="$REPO_DIR/hudi-vector-search/packaging/hudi-spark-bundle/target/hudi-spark3.5-bundle_2.12-1.2.0-SNAPSHOT.jar"
LANCE_JAR="$REPO_DIR/lance-spark-bundle-3.5_2.12-0.0.14.jar"

export PYSPARK_SUBMIT_ARGS="--jars $HUDI_JAR,$LANCE_JAR pyspark-shell"
